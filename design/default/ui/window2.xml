    <label name="y" text="0" x="center" y="middle:-40" w="50%" h="40"/>
    <label name="rotation" text="0" x="center" y="middle:0" w="50%" h="40"/>
    <label name="distance" text="0" x="center" y="middle:40" w="50%" h="40"/>
    <label name="scale" text="0" x="center" y="middle:80" w="50%" h="40"/>
    <label name="fingers" text="0" x="center" y="middle:120" w="50%" h="40"/>
